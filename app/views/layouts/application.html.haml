%html{lang: "en"}
  / <![endif]
  %head
    %meta{charset: "utf-8"}/
    / Uncomment to make IE8 render like IE7
    / <meta http-equiv="X-UA-Compatible" content="IE=7" />
    / Set the viewport width to device width for mobile
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "CrossFitHub"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/custom.modernizr"
    = csrf_meta_tags
    = javascript_include_tag "https://cdn.firebase.com/v0/firebase.js"


  %body{ :class => ('logged-out' unless current_user) }

    - if current_user
      %nav.top-bar
        %ul.title-area
          %li.name
            %h1
              = link_to "CrossFitHub", root_path
          %li.toggle-topbar.menu-icon
            %a{href: "#"}
              %span Menu
        %section.top-bar-section
          %ul.right
            %li
              = form_tag users_path, method: 'get' do
                %span.search-wrapper
                  = text_field_tag :search, params[:search], {type: 'search'}
            %li
              %a{href: "#"} Settings
            %li.divider
            %li
              = link_to "Sign out", destroy_user_session_path, :method => :delete



    .row.alert-row
      - unless notice.blank?
        %p.alert-box.notice= notice
      - unless alert.blank?
        %p.alert-box.alert= alert

    
    .row= yield

    = javascript_include_tag "application"
    - if current_user != nil
      :javascript
        $(document).ready(function(){
          userId = '#{current_user.id}'
          firebaseListen(userId) 
        });
      - current_user.followers.each do |follower|
        :javascript
          $(document).ready(function(){
            followerId = '#{follower.id}'
            firebaseNotify(followerId)
          });


    = yield :javascript 

