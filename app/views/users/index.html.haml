%row

  .large-3.columns
    = image_tag @user.profile_pic, :size => "128x128"
    %hr
    - if signed_in?
      %section
        =render 'users/stats'

    %hr
    %h4 New Workout:
    = form_for @completion do |f|
      .field
        = f.label :milliseconds
        = f.number_field :milliseconds
      .field
        = f.collection_select :wod_id, Wod.all.collect, :id, :name, include_blank: true
      .actions
        = f.submit "Save"


    / - @user.followed_user_posts.each do |fuposts|
    /   - fuposts.each do |post|
    /     %p= post.user.name + " -> " + post.time

  / move this into a partial 
  /(supposed to be no logic in view)
  .large-6.columns 
    - @user.followed_user_posts.each do |followed_user_post|
      - followed_user_post.each do |completion|
        .timeline-block
          .large-3.small-3.columns
            =image_tag completion.user.profile_pic
          .large-9.small-9.columns
            = "#{completion.user.name} completed #{Wod.find(completion.wod_id).name} in #{completion.time}"
            .timeline-details= completion.created_at.asctime
            %input{:type => "text"}
            - @completion = completion
            = render 'votes'
            %hr/
            .timeline-comments
              - completion.comments.each do |comment|
                .timeline-comment
                  .large-2.small-2.columns
                    =image_tag comment.user.profile_pic
                  .large-10.small-10.columns
                    .timeline-comment= comment.text

  .large-3.columns
    %p Following:
    - @user.followed_users.each do |followed_user|
      = image_tag followed_user.profile_pic, :size => "64x64"
      %p= link_to followed_user.name, followed_user
