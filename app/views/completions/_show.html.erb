

<div class="large-3 small-3 columns"><%= image_tag @completion.user.profile_pic %></div>
<div class="large-9 small-9 columns">
  <%= "#{@completion.user.name} completed #{Wod.find(@completion.wod_id).name} in #{@completion.time}" %>
  <div class="timeline-details">
    <%= @completion.created_at.asctime %>
    
<%= form_for [@completion, Comment.new], remote: true do |f| %>
<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %> 
  <%= f.text_field :text %>
<% end %>

    <%= render 'votes' %>
    <hr />
    <div class="timeline-comments">
      <% @completion.comments.each do |comment| %>
        <div class="timeline-comment">
          <div class="large-2 small-2 columns">
            <%= image_tag comment.user.profile_pic %>
          </div>
          <div class="large-10 small-10 columns">
            <div class="timeline-comment">
              <%= comment.text %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



