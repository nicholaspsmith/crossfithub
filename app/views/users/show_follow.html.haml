.small-4.large-4.columns
  - provide(:title, @title)
  %aside
    %section
      = link_to image_tag(@user.get_image, :size => '290x290', :class => "user-img"), @user
      %h1.username= @user.name
      %span/

.small-8.large-8.columns
  %h3= @title
  - if @users.any?
    .user_avatars
      - @users.each do |user|
        %p
          %section
            = image_tag user.get_image, :size => "120x120", :class => "user-img"
            = user.name

  = will_paginate
