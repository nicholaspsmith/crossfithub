.large-3.columns
  = link_to image_tag(@user.get_image), root_path
  %h3= @user.name
  %hr
  - if signed_in?
    %section
      = render 'stats'
    %section
      = render 'follow_form'


.large-7.columns
  Completed workouts
  %p
  - @user.completions.each do |completion|
    = render :partial => 'completions/completion', :locals => { :completion => completion }
    / = Wod.find(completion.wod_id).name
    / %p= completion.time

.large-2.columns
  = @user.name
  is following:
  %br
  - if @user.followed_user_list
    - @user.followed_user_list.each do |user|
      =link_to image_tag(user.get_image), user
      %p= link_to user.name, user
  -else
    %br
    = 'nobody :('
