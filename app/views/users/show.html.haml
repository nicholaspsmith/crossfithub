.row
  .large-3.columns
    = image_tag @user.profile_pic
    %h3= @user.name
    %hr
    - if signed_in?
      %section
        =render 'users/stats'
      %section
        = render 'follow_form'


  .large-5.columns
    Completed workouts
    %p
    - @user.completions.each do |completion|
      = Wod.find(completion.wod_id).name
      %p= completion.time

  .large-4.columns
    = @user.name
    is following:
    %br
    - if @user.followed_users.length < 1
      %br
      = 'nobody :('
    -else
      - @user.followed_users.each do |user|
        =image_tag user.profile_pic, :size => "64x64"
        %p= link_to user.name, user
