<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%#= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><p><%= link_to "view my profile", @user %></p></span>
      <span><b>Completed Workouts:</b> <%= @user.completions.count %></span>
    </section>
    <section>
      <%#= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <section>
              <%#= link_to gravatar_for(user, size: 30), user %>
              <%= image_tag user.profile_pic, :size => "120x120" %>
              <%= user.name %>
            </section>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">users...
        <%#= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>